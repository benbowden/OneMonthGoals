<%= link_to 'Back', pins_path %>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading center">

				<!-- Some users didn't enter at start -->
				<% if @pin.title.nil? %>
					Goal

				<% else %>
					<%= @pin.title %>
				<% end %>
			</div>
			<div class="panel-body">

				<p>
				  <strong>Description:</strong>
				  <%= @pin.description %>
				  
				  <p><strong> By: </strong> <%= link_to @pin.user.name,  @pin.user if @pin.user%></p>
				</p>

				<p>Created <%= time_ago_in_words(@pin.created_at) %> ago</p>

				<!-- 
				<% if @pin_user == current_user %>
					 <%= link_to edit_pin_path(@pin) do %>
        			<span class="glyphicon glyphicon-edit"></span>
       					 Edit
      				<% end %>
				<% end %>
			-->
			</div>
		</div>
	</div> <!-- End of first "row" -->

	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default">
		

			<div class="panel-body">
				<%= render 'showForm.html.erb' %>

			</div> 
		</div>
	</div> <!-- End of second "row" -->			
</div>

